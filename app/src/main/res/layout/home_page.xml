<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".HomePage">

    <!-- TextView for displaying "Learning Python" -->
    <TextView
        android:id="@+id/LearningPython"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="35dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:text="Learning Python" />

    <!-- ImageView for displaying the Python icon -->
    <ImageView
        android:id="@+id/PythonIcon"
        android:layout_width="180dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/python" />

    <!-- TextView for displaying "with Libby Pashinsky" -->
    <TextView
        android:id="@+id/WithLibbyPashinsky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:text="with Libby Pashinsky"
        android:textColor="#FFFFFF" />

    <!-- Button for starting the application -->
    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:text="Press on button to continue"
        android:textSize="20dp" />

</LinearLayout>
